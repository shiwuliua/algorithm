https://www.acwing.com/problem/content/description/5060/
#include<iostream>
using namespace std;
const int N=1e5+10;

int main()
{
    int n,p;cin>>n>>p;
    long long a[n+1]={0};
    for(int i=1;i<=n;i++)cin>>a[i];
    for(int i=1;i<=n;i++)a[i]+=a[i-1];
    int ans=0;
    for(int i=1;i<=n-1;i++)
    {
        int t1=(a[i])%p;
        int t2=(a[n]-a[i])%p;
        ans=max(ans,t1+t2);
    }
    cout<<ans<<endl;
    
}
